	 * @param obj		flash vars object.		 */		function set flashVars( obj:Object ):void				/**		 * Gets the application class path.		 * 		 * @return String.		 */		function get appClass():Class				/**		 * Sets the application class path.		 * 		 * @param path		String.		 */		function set appClass( path:Class ):void	}}